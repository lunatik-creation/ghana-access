extends layout

block content
    .gtco-loader
    #page
      .page-inner
        #head-top(style='position: absolute; width: 100%; top: 0; ')
          .gtco-top
            .container-fluid(style='background-color:#4D4D4D;')
              .row
                .col-md-6.col-xs-6
                .col-md-6.col-xs-6.social-icons
                  ul#lang.gtco-social-top
                    li
                      a(href='en/form')
                        i
                          img(src='images/USA_30px.png', alt='')
          nav#catch.gtco-nav.sticky-banner(role='navigation')
            .gtco-container
              #nav.row
                .col-xs-12.text-center.menu-1
                  span.go-back
                    a(href='/')
                      .logo
                        img(src='images/logo.png', alt='Ghana Access', width='100%', height='100%')
                  ul
                    li
                      a(href='/') Accueil
                    li.has-dropdown
                      a(href='/services') Services
                      ul.dropdown
                        li
                          a(href='/services#fox-1') Conseils et Orientations Scolaires
                        li
                          a(href='/services#fox-2') Traduction Document
                        li
                          a(href='/services#fox-3') Hébergement
                        li
                          a(href='/services#fox-4') Etablissement de Visa
                    li
                      a(href='/about') Qui somme nous
                    li
                      a(href='/partner') Partenaires
                    li
                      a(href='/contact') Contactez Nous
        header#gtco-header.gtco-cover.gtco-cover-sm(role='banner', style='background-image: url(images/slider3.jpg)', data-stellar-background-ratio='0.5')
          .overlay
          .gtco-container
            .row.row-mt-15em
              .col-md-7.mt-text.text-left.animate-box(data-animate-effect='fadeInUp')
                h1
                  | Remplissez
                  strong  le formulaire
                h2 Le meilleur moyen de nous faire savoir ce que vous voulez.
        .gtco-section.gtco-gray-bg
          center
            b
              h2 Ghana Access Formulaire
            br
          br
          form#form1( action='')
            fieldset
              legend Information Personelle
              .row.form-group
                .col-md-12
                  p
                    input#textfield.form-control(name='Nom', type='text', required='', placeholder='Nom')
              p
                input#textfield2.form-control(name='Prenoms', type='text', required='', placeholder='Prenoms')
              p
                input#email.form-control(name='Email', type='email', required='', placeholder='Email')
              p
                select.form-control(name='Nationalite', required='')
                  option Nationalite
                  option Bénin
                  option Burkina-Faso
                  option Burundi
                  option Cameroun
                  option Cap-Vert
                  option Centrafrique
                  option Comores
                  option Congo
                  option Côte d'Ivoire
                  option Djibouti
                  option Égypte
                  option France
                  option Gabon
                  option Guinée
                  option Guinée-Bissau
                  option Guinée Équatoriale
                  option Mali
                  option Madagascar
                  option Maroc
                  option Maurice (île)
                  option Mauritanie
                  option Niger
                  option Nigeria
                  option Qatar
                  option Rwanda
                  option Sao Tomé et Principe
                  option Sénégal
                  option Seychelles
                  option Tchad
                  option Togo
                  option Tunisie
                  option Autre
              p
                input#textfield5.form-control(type='text', name='Profession', placeholder='Profession')
              p
                input#textfield6.form-control(type='text', name='Niveau', placeholder='Niveau Scolaire')
              p
                input#tel.form-control(name='Telephone', type='tel', required='', placeholder='Telephone')
              p
                input#date.form-control(name='Date', type='text', required='', placeholder='Date de naissance')
              p
                select.form-control(name='Sexe', required='')
                  option Sexe
                  option M
                  option F
                  option Autre
              p
                select.form-control(name='Sejour', required='')
                  option Duree de Sejour
                  option 1 - 30 jours
                  option 1 - 3 mois
                  option 3 - 6 mois
                  option 6 - 12 mois
                  option 1 - 4 ans
                  option Indefinie
              p
                | Services: 
                br
                | 	    Inscription Scolaire
                input(type='hidden', name='Inscription_Scolaire', value='on')
                input#checkbox5(name='Inscription_Scolaire', type='checkbox')
                | 	  Hébergement
                input(type='hidden', name='Hébergement', value='off')
                input#checkbox(type='checkbox', name='Hébergement')
                | 	    Traduction Documentss
                input(type='hidden', name='Traduction_document', value='off')
                input#checkbox2(type='checkbox', name='Traduction_documents')
                | 	    Etablissement Visa
                input(type='hidden', name='Etablissement_Visa', value='off')
                input#checkbox3(type='checkbox', name='Etablissement_Visa')
                | 	    Location de vehicule
                input(type='hidden', name='Location_de_vehicule', value='off')
                input#checkbox4(type='checkbox', name='Location_de_vehicule')
                | 	    Reservation d'Hotel
                input(type='hidden', name='Reservation_hotel', value='off')
                input#checkbox6(type='checkbox', name='Reservation_hotel')
              p
                | Photo:
                input#fileField(name='Photo', type='file', required='')
              p
                textarea#textarea.form-control(name='Commentaire', placeholder='Commentaire')
              p
            br
            fieldset
              legend Information du Parrain ou Marraine
              p
                input#textfield3.form-control(name='Parain_Nom', type='text', required='', placeholder='Nom')
              p
                input#textfield4.form-control(name='Parain_Prenoms', type='text', required='', placeholder='Prenoms')
              p
                input#tel2.form-control(name='Parain_Telephone', type='tel', required='', placeholder='Telephone')
              p
                input#email2.form-control(type='email ', name='Parain_Email', placeholder='Email (optionelle)')
                input(type='hidden', name='Parain_Email', value='')
            p
              input#submit.btn.btn-primary(type='submit', name='submit-form', value='Envoyer')
      .gtco-cover.gtco-cover-sm(style='background-image: url(images/frfr.jpg)', data-stellar-background-ratio='0.5')
        .overlay
        .gtco-container.text-center
          .display-t
            .display-tc
              h1
                | Vous nous definissez le mieux
      footer